name: Ci para C

on:
  push:

jobs:
  build:
    runs-on: ubuntu-latest
  
    steps:
    - name: clonar o reposit√≥rio
      uses: actions\checkout@v3
  
    - name: instalar compilador GCC
      run: gcc Github.c -o programa
  
    - name Executar o programa
      run: ./programa
  
    - name: Executar testes automatizados
      run: |
        gcc -o teste teste.c
        ./teste
